{
  "name": "reviewshops",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">= 7.6.0"
  },
  "now": {
    "dotenv": "variables.env.now"
  },
  "scripts": {
    "start": "node ./start.js",
    "startDev": "concurrently \"npm run watch\" \"npm run assets\" --names \"??,??\" --prefix name",
    "dev": "concurrently \"npm run watch\" \"npm run assets\" --names \"??,??\" --prefix name",
    "dev-win": "concurrently \"npm run watch\" \"npm run assets-win\" --names \"??,??\" --prefix name",
    "watch": "nodemon ./start.js --ignore public/",
    "assets": "webpack -w --display-max-modules 0",
    "assets-win": ".\\node_modules\\.bin\\webpack.cmd -w --display-max-modules 0",
    "sample": "node ./data/load-sample-data.js",
    "blowitallaway": "node ./data/load-sample-data.js --delete",
    "now": "now -e DB_USER=@db_user -e DB_PASS=@db_pass -e NODE_ENV=\"production\" -e PORT=80"
  },
  "browserslist": "last 3 versions",
  "dependencies": {
    "axios": "0.18.0",
    "body-parser": "1.18.3",
    "connect-flash": "0.1.1",
    "connect-mongo": "3.0.0",
    "cookie-parser": "1.4.3",
    "dompurify": "1.0.8",
    "dotenv": "6.1.0",
    "es6-promisify": "6.0.0",
    "express": "4.16.4",
    "express-session": "1.15.6",
    "express-validator": "5.3.0",
    "faker": "4.1.0",
    "forever": "^0.15.3",
    "glob": "7.1.3",
    "html-to-text": "4.0.0",
    "jimp": "0.5.3",
    "juice": "5.0.0",
    "md5": "2.2.1",
    "moment": "2.22.2",
    "mongoose": "5.3.9",
    "mongoose-mongodb-errors": "0.0.2",
    "multer": "1.4.0",
    "nodemailer": "4.6.8",
    "passport": "0.4.0",
    "passport-local": "1.0.0",
    "passport-local-mongoose": "5.0.1",
    "pug": "2.0.3",
    "slugs": "0.1.3",
    "uuid": "3.3.2",
    "validator": "10.8.0"
  },
  "devDependencies": {
    "@babel/core": "7.1.2",
    "@babel/preset-env": "7.1.0",
    "autoprefixer": "9.1.5",
    "babel-core": "6.26.3",
    "babel-loader": "8.0.4",
    "babel-preset-env": "1.7.0",
    "concurrently": "4.0.1",
    "css-loader": "1.0.0",
    "mini-css-extract-plugin": "0.4.3",
    "node-sass": "4.9.3",
    "nodemon": "1.18.4",
    "now": "11.4.6",
    "postcss-loader": "3.0.0",
    "sass-loader": "7.1.0",
    "webpack": "4.20.2",
    "webpack-cli": "^3.1.2"
  }
}
